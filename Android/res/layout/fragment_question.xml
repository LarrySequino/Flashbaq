<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blackColor"  >

    <RelativeLayout 
        android:id="@+id/questionRL"
        android:background="@color/cyan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dip">
		
	<TextView
        android:id="@+id/questionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteColor"
        android:layout_centerInParent="true"
        android:text="Question One"
        android:layout_margin="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
        
        
    </RelativeLayout>
    
	<Button 
	    android:id="@+id/answer_one"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/blueColor"
	    android:layout_margin="10dip"
		android:textColor="@color/whiteColor"
		android:text="This is the first answer" />
	
	<Button 
	    android:id="@+id/answer_two"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" 
	    android:background="@color/blueColor"
	    android:layout_margin="10dip" 
		android:textColor="@color/whiteColor"
		android:text="This is the second answer"/>
	
	<Button 
	    android:id="@+id/answer_three"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/blueColor"
	    android:layout_margin="10dip"
	    android:textColor="@color/whiteColor"
	    android:text="This is the third answer" />
			"
</LinearLayout>